<MudDialog>
    <DialogContent>
        <MudTextField T="string" Label="Mensagem" Variant="Variant.Text" Text="@mensagem" @bind-Value="mensagem" Lines="7" /> 
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Clear">Limpar</MudButton>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Submit">Ok</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    string mensagem = "Olá, seja bem vindo ao Hotel dos Nobres, estamos aguardando sua chegada, qualquer dúvida ou informação estamos a disposição. Lembrando que a recepção esta pronta para te atender qualquer duvida pode chamar. Se precisar de mais coberta ou troca de algum item pode solicitar. Obrigado ";

    void Submit() => MudDialog.Close<string>(mensagem);
     
    void Cancel() => MudDialog.Cancel();

    void Clear() => mensagem = "";
}
<MudCard Style="background-color: #F5F4F4; rounded-xl" >
    <MudCardHeader>
        <CardHeaderContent>
            <MudText Typo="Typo.h6"> Numero @Reserva!.IDReserva </MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText Typo="Typo.body2">
            Data de Check-in: @Reserva!.DataCheckIn!.GetValueOrDefault().ToString("dd/MM/yyyy") <br>
            Data de Check-out: @Reserva!.DataCheckOut!.GetValueOrDefault().ToString("dd/MM/yyyy") <br>
            Origem: @Reserva!.Origem
        </MudText>
    </MudCardContent>
    <MudCardActions>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   Class="ml-auto rounded-xl"
                   Href=@($"/minhareserva/{Reserva!.IDReserva}")>Detalhes</MudButton>

    </MudCardActions>
</MudCard>



@code {
    [Parameter]
    public Reserva? Reserva { get; set; }

    public string? Imagem { get; set; }

    protected override void OnInitialized()
    {

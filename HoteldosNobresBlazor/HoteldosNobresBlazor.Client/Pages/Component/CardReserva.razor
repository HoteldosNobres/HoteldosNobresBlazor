    private string LimitaCaracteres(string texto, int tamanhoMaximo)
    {
        tamanhoMaximo -= 3;
        return (texto.Length >= tamanhoMaximo) ? $"{texto.Substring(0, tamanhoMaximo)}..." : texto;
    }
}

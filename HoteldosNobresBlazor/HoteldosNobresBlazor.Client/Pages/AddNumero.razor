@page "/Addnumero" 
@using HoteldosNobresBlazor.Funcoes
@attribute [StreamRendering]
@rendermode InteractiveAuto
@inject NavigationManager NavigationManager

<PageTitle>Numero</PageTitle>

<h1>Add contato no Google</h1>
 
<InputText id="reservationNomer" @bind-Value="nome" />

<InputText id="reservationNumero" @bind-Value="numero" />

<button class="btn btn-primary" @onclick="GoToReservation">Click me 2</button>


@code {
    private int currentCount = 0;
    public string nome = "nome";
    public string numero = "numero";

    private void IncrementCount()
    {
        currentCount++;
    }

    private void HandleValidSubmit()
    {
        Console.WriteLine("OnValidSubmit");
    }

    private async Task GoToReservation()
    {
        FunctionGoogle.AddPeople(nome, " ", numero, "");
        NavigationManager.NavigateTo("/counter");
    }
}
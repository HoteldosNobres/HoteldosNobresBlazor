@page "/Addnumero" 
@using HoteldosNobresBlazor.Funcoes
@rendermode InteractiveAuto
@inject NavigationManager NavigationManager 

<PageTitle>Numero</PageTitle>

<h1>Add contato no Google</h1>
 
<InputText id="NomePhone" @bind-Value="nome" />

<InputText id="NumeroPhone" @bind-Value="numero" />

<button class="btn btn-primary" @onclick="GotoAddNumber">Adicionar</button>

<br />
@resultado
<br />

@code {
    private int currentCount = 0;
    public string nome = "nome";
    public string numero = "numero";
    public string resultado = "-x-";

    public void GotoAddNumber()
    {
        resultado = FunctionGoogle.AddPeopleAsync(nome, " ", numero, "").Result;
        if(resultado == "OK")
             NavigationManager.NavigateTo("/counter");
    }
}